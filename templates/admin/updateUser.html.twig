{% extends 'base.html.twig' %}

{% block title %}категория

{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8 col-md-6">
            {{ form_start(form) }}
                <div class="m-3 mb-5">

                    <div class="form-group">
                        <label>Email</label>
                        <div>{{form_widget(form.email,{'attr': {'class': 'form-control' }})}}</div>

                        <label>Password</label>
                        <div>{{form_widget(form.password,{'attr': {'class': 'form-control' }})}}</div>

                        {% for role in form.roles %}
                        <label>Role</label>
                        <div>{{form_widget(role,{'attr': {'class': 'form-control' }})}}</div>
                                {% endfor %}
                        </div>
                    <button class="btn btn-primary">{{ button_label|default('Изменить') }}</button>

                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
    {% endblock %}