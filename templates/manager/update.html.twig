{% extends 'base.html.twig' %}

{% block title %}update page{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-3 col-md-3 mt-4">

{{ form_start(form) }}
    <div class="form-group">
        <label for="InputTitle">Title</label>
        <div>{{form_widget(form.title,{'attr': {'class': 'form-control','value' :  book.title}})}}</div>
    </div>
    <div class="form-group">
        <label for="InputAuthor">Author</label>
        <div>{{form_widget(form.author,{'attr': {'class': 'form-control'}} )}}</div>
    </div>
    <div class="form-group">
        <label>Year</label>
        <div>{{form_widget(form.year,{'attr': {'class': 'form-control','value' :  book.year }})}}</div>
    </div>

    {# form_widget(form) #}
    <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}